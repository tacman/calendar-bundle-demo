{% extends "org/base.html.twig" %}

{% block body %}
    <h1>Org: {{ org }}</h1>

    {{ include('cal/_table.html.twig', {cals: org.calendars}) }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ org.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ org.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ org.slug }}</td>
            </tr>
            <tr>
                <th>CalCount</th>
                <td>{{ org.calCount }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('org_edit', org.rp) }}">edit</a>
    {{ include('org/_delete_form.html.twig') }}
{% endblock %}

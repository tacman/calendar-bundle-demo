

<table class="table js-datatable">
    <thead>
    <tr>
        <th>actions</th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Slug</th>
            </tr>
    </thead>
    <tbody>
    {% for org in orgs %}
    <tr>
        <td>
            <a href="{{ path('org_show', org.rp) }}">
                <span class="fas fa-eye"></span>
                <i class="bi bi-info"></i>
            </a>
            <a href="{{ path('org_edit', org.rp) }}">
                <span class="fas fa-edit"></span>
                <i class="bi bi-pencil"></i>
            </a>
        </td>

                    <td>{{ org.id }}</td>
                    <td>{{ org.name }}</td>
                    <td>{{ org.slug }}</td>
            </tr>
    {% else %}
    <tr>
        <td colspan="4">no records found</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

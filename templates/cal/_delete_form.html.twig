<form method="post" action="{{ path('cal_delete', cal.rp ) }}" onsubmit="return confirm('Are you sure you want to delete this cal ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cal.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>

{% extends "app_contest/base.html.twig" %}

{% block body %}
    <h1>Contest</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contest.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ contest.title }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ contest.startDate ? contest.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ contest.duration }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_contest_edit', contest.rp) }}">edit</a>
    {{ include('app_contest/_delete_form.html.twig') }}
{% endblock %}
